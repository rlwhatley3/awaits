{
    "include": [
    	"./**/*",
    	"./lib/**/*"
    ],
    "exclude": [
    	"./node_modules",
    	"package-lock.json",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "pretty": true,
        "noImplicitUseStrict": true,
        "experimentalDecorators": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "checkJs": false,
        "lib": ["es2020"]
    }
}